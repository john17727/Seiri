<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ThemeOverlay.Seiri.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyTheme.BottomSheet.Modal</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.Seiri.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi" tools:targetApi="o_mr1">
            @android:color/transparent
        </item>
    </style>

    <style name="Widget.Seiri.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?shapeAppearanceLargeComponent</item>
    </style>

    <style name="ThemeOverlay.Seiri.BottomSheetDialog.Blue">
        <item name="android:navigationBarColor">@color/Blue</item>
        <item name="android:backgroundTint">@color/Blue</item>
    </style>

    <style name="ThemeOverlay.Seiri.BottomSheetDialog.Orange">
        <item name="android:navigationBarColor">@color/Orange</item>
        <item name="android:backgroundTint">@color/Orange</item>
    </style>

    <style name="ThemeOverlay.Seiri.BottomSheetDialog.Red">
        <item name="android:navigationBarColor">@color/Red</item>
        <item name="android:backgroundTint">@color/Red</item>
    </style>

    <style name="ThemeOverlay.Seiri.BottomSheetDialog.Green">
        <item name="android:navigationBarColor">@color/Green</item>
        <item name="android:backgroundTint">@color/Green</item>
    </style>
</resources>
